<%- include('partials/header.ejs') %>
<h1>Home</h1>
<p><%= homeStartingContent %> </p>
<% if(posts.length===0){ %>
    <h1 class="journals">No Journals has been written!</h1>
<% } else { %>
    <h1 class="journals">Your Journals</h1>
    <% for(let i=0;i<posts.length;i++){ %>
        <h2 class="title"><%=posts[i].title  %> </h2>
        <p class="content"><%=posts[i].content.substring(0,100)+"..." %><a href="http://localhost:3000/posts/<%=posts[i]._id %> ">Read more</a></p>
    <% } %>
<% } %>  
<%- include('partials/footer.ejs') %>
